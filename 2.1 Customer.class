
public class Customer {

	// 속성
	public String CID;
	public String CName;
	public int CAge;
	
	public Product[] orderProducts = new Product[10];
	public int orderQty = 0;
	// 생성자
	
	// 메서드
	// 1. 상품구매 
	// 콜바이레퍼런스
	public void orderProduct(Product prod, int qty) {
		// Product쪽에서 개수 체크를 넘겨야함
		Boolean chkProd = prod.CheckQty(qty);
		String strMsg = "";
		strMsg = "나이가 " + Integer.toString(CAge) + "세인 " + CName + "가 " + prod.PName + "을 " + Integer.toString(qty) + "개 구매했습니다.\n";
		
		if(chkProd) {
		strMsg += "총 금액 : " + Integer.toString(prod.PPrice * qty) + "\n";
			
			orderProducts[orderQty] = prod;
			orderQty += 1;
		}
		
		else {
		strMsg += prod.PName + "은(는) " + Integer.toString(prod.PMaxQty) + "개를 초과하여 구매할 수 없습니다.\n";
		}
		System.out.println(strMsg);
		
	}
	
	public void showOrderList() {
		for(int i = 0; i<orderProducts.length; i++) {
			if(orderProducts[i] != null) {
				System.out.println(CName + "의 구매 내역 ");
				System.out.println(i+1 + "번 째 구매상품 : " + orderProducts[i].PName + "  " + orderProducts[i].PPrice);				
			}
		}
		System.out.println("-----------------------------");
	}
}
